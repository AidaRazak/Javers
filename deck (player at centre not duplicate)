import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Deck {
    private List<String> cards;
    private String centerCard;

    public Deck() {
        initializeDeck();
    }

    private void initializeDeck() {
        cards = new ArrayList<>();
        String[] ranks = {"A", "2", "3", "4", "5", "6", "7", "8", "9", "X", "J", "Q", "K"};
        String[] suits = {"s", "h", "d", "c"};

        // Generate and store the center card
        String centerRank = ranks[(int) (Math.random() * ranks.length)];
        String centerSuit = suits[(int) (Math.random() * suits.length)];
        centerCard = centerRank + centerSuit;

        // Create the rest of the deck, excluding the center card
        for (String suit : suits) {
            for (String rank : ranks) {
                String card = rank + suit;
                if (!card.equals(centerCard)) {
                    cards.add(card);
                }
            }
        }
    }

    public void shuffle() {
        Collections.shuffle(cards);
    }

    public String deal() {
        if (!cards.isEmpty()) {
            return cards.remove(cards.size() - 1);
        } else {
            return null;
        }
    }

    public List<String> dealToPlayers(int numPlayers, int cardsPerPlayer) {
        List<String> playerHands = new ArrayList<>();

        // Remove the center card from the deck
        cards.remove(centerCard);

        for (int i = 0; i < numPlayers; i++) {
            List<String> hand = new ArrayList<>();

            // Add the center card to the player's hand
            hand.add(centerCard);

            // Deal remaining cards to the player's hand
            for (int j = 1; j < cardsPerPlayer; j++) {
                String card = deal();
                if (card != null) {
                    hand.add(card);
                }
            }

            playerHands.add(hand.toString());
        }

        return playerHands;
    }

    @Override
    public String toString() {
        return cards.toString();
    }

    public String getCenterCard() {
        return centerCard;
    }
}
